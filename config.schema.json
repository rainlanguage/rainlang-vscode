{
  "type": "object",
  "properties": {
    "autoCompile": {
      "type": "object",
      "title": "Auto Compile Mappings", 
      "description": "Auto compile mappings for file actions, auto compiles source files into destinations when an action is triggered",
      "additionalProperties": false,
      "minProperties": 1,
      "examples": [{
        "onSave": [{
          "source": "./path/to/source.rain",
          "destination": "./path/to/destination.json",
          "entrypoints": ["main", "fn"]
        }]
      }],
      "properties": {
        "onSave": {
          "type": "array",
          "title": "On-Save Auto Compile Mappings",
          "description": "Mappings for on-save auto compile, where specified .rain source files will automatically be compiled on save and results written into destination json file",
          "minItems": 1,
          "items": {
            "type": "object",
            "title": "Mapping",
            "description": "A single mappping item",
            "required": ["source", "destination", "entrypoints"],
            "additionalProperties": false,
            "properties": {
              "source": {
                "type": "string",
                "title": "Source File Path",
                "description": "Path to a .rain file as source to read from",
                "pattern": "^(\\./)(\\.\\/|\\.\\.\\/|[^]*\\/)*[^]+\\.rain$"
              },
              "destination": {
                "type": "string",
                "title": "Destination File Path",
                "description": "Path to a .json file as destination to write results into",
                "pattern": "^(\\./)(\\.\\/|\\.\\.\\/|[^]*\\/)*[^]+\\.json$"
              },
              "entrypoints": {
                "type": "array",
                "title": "Entrypoints",
                "description": "Array of entrypoints to compile",
                "items": {
                  "type": "string",
                  "title": "Entrypoint",
                  "pattern": "^[a-z][0-9a-z-]*$"
                }
              }
            }
          }
        }
      }
    },
    "subgraphs": {
      "description": "Additional subgraph endpoint URLs to include when searching for metas of specified meta hashes in a rainlang document.",
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^https:|^wss:",
        "minItems": 1
      }
    },
    "meta": {
      "title": "Local Meta",
      "description": "key/value pairs of meta hash and meta bytes.",
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "patternProperties": {
        "^0x[a-fA-F0-9]{64}$": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{2,}$"
        }
      },
      "examples": [
        {
          "0xe4c000f3728f30e612b34e401529ce5266061cc1233dc54a6a89524929571d8f": "0x1234567890..."
        }
      ]
    }
  }
}